<%- layout('Layout/boilerplate.ejs') %>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
/>
<style>
  body {
    background-color: #28a745;
  }
  .sidebar {
    position: sticky;
    top: 0;
    left: 0;
    margin-top: 3.5rem;
    position: fixed;
    width: 200px;
    height: 100%;
    background-color: #343a40; /* Dark gray background */
    color: #fff; /* White text */
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }

  .sidebar h4 {
    margin-top: 0;
    margin-bottom: 20px;
    font-size: 1.2rem;
  }

  .sidebar p {
    margin: 0;
    font-size: 1rem;
  }
</style>
<div class="sidebar">
  <ul class="list-group client-info-container" style="width: 100%">
    <li class="list-group-item">
      <p><i class="fas fa-user"></i>Username: <%=Name%></p>
    </li>
    <li class="list-group-item">
      <p><i class="fas fa-id-card"></i>Id: <%=CustomerNo%></p>
    </li>
    <li class="list-group-item">
      <p><i class="fas fa-coins"></i> Balance: <%=Balance%></p>
    </li>

    <ul class="navbar-nav flex-column" style="padding-top: 20px; height: 50%">
      <li
        class="nav-item"
        style="width: 200px; border: 1px solid white; height: 20vh"
      >
        <a
          class="nav-link active text-center"
          aria-current="page"
          href="/client/<%=id%>/buy"
          style="font-size: 20px; color: white"
          >Buy</a
        >
      </li>
      <li
        class="nav-item"
        style="width: 200px; border: 1px solid white; height: 20vh"
      >
        <a
          class="nav-link text-center"
          href="/client/<%=id%>/sell"
          style="font-size: 20px; color: white"
          >Sell</a
        >
      </li>
      <li
        class="nav-item"
        style="
          width: 200px;
          border: 1px solid white;
          margin-left: 0;
          height: 20vh;
        "
      >
        <a
          class="nav-link text-center"
          href="/client/<%=id%>/portfolio"
          style="font-size: 20px; color: white"
          >Portfolio</a
        >
      </li>
    </ul>
  </ul>
</div>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-primary text-light">
          <h5 class="card-title mb-0">Create New Fund</h5>
        </div>
        <div class="card-body">
          <form action="/admin/create-fund" method="post">
            <div class="mb-3">
              <label for="fundName" class="form-label">Fund Name</label>
              <input
                type="text"
                class="form-control"
                id="fundName"
                name="fundName"
                placeholder="Enter Fund Name"
                required
              />
            </div>
            <div class="mb-3">
              <label for="price" class="form-label">Price</label>
              <input
                type="number"
                class="form-control"
                id="price"
                name="price"
                placeholder="Enter Price"
                required
              />
            </div>
            <div class="mb-3">
              <label for="quantity" class="form-label">Quantity</label>
              <input
                type="number"
                class="form-control"
                id="quantity"
                name="quantity"
                placeholder="Enter Quantity"
                required
              />
            </div>
            <button type="submit" class="btn btn-success w-100">
              Create Fund
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
