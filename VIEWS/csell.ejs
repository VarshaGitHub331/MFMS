<%- layout('Layout/boilerplate.ejs') %>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
/>
<style>
  body {
    background-color: #28a745;
  }
  .sidebar {
    position: sticky;
    top: 0;
    left: 0;
    margin-top: 3.5rem;
    position: fixed;
    width: 200px;
    height: 100%;
    background-color: #343a40; /* Dark gray background */
    color: #fff; /* White text */
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }

  .sidebar h4 {
    margin-top: 0;
    margin-bottom: 20px;
    font-size: 1.2rem;
  }

  .sidebar p {
    margin: 0;
    font-size: 1rem;
  }
</style>
<div class="sidebar">
  <ul class="list-group client-info-container" style="width: 100%">
    <li class="list-group-item">
      <p><i class="fas fa-user"></i>Username: <%=Name%></p>
    </li>
    <li class="list-group-item">
      <p><i class="fas fa-id-card"></i>Id: <%=CustomerNo%></p>
    </li>
    <li class="list-group-item">
      <p><i class="fas fa-coins"></i> Balance: <%=Balance%></p>
    </li>

    <ul class="navbar-nav flex-column" style="padding-top: 20px; height: 50%">
      <li
        class="nav-item"
        style="width: 200px; border: 1px solid white; height: 20vh"
      >
        <a
          class="nav-link active text-center"
          aria-current="page"
          href="/client/<%=id%>/buy"
          style="font-size: 20px; color: white"
          >Buy</a
        >
      </li>
      <li
        class="nav-item"
        style="width: 200px; border: 1px solid white; height: 20vh"
      >
        <a
          class="nav-link text-center"
          href="/client/<%=id%>/sell"
          style="font-size: 20px; color: white"
          >Sell</a
        >
      </li>
      <li
        class="nav-item"
        style="
          width: 200px;
          border: 1px solid white;
          margin-left: 0;
          height: 20vh;
        "
      >
        <a
          class="nav-link text-center"
          href="/client/<%=id%>/portfolio"
          style="font-size: 20px; color: white"
          >Portfolio</a
        >
      </li>
    </ul>
  </ul>
</div>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-primary">
        <div
          class="card-header"
          style="background-color: #6c757d; color: white"
        >
          <h2 class="fw-bold text-center">Stocks Available To Sell</h2>
        </div>
        <div class="card-body">
          <ul class="list-group">
            <% for(item of funds) { %>
            <li
              class="list-group-item mb-4 border border-primary"
              style="background-color: #f5f5f5"
            >
              <div class="row align-items-center">
                <div class="col-md-3">
                  <span class="fw-bold">Stock ID:</span> <%= item.FundNo %>
                </div>
                <div class="col-md-3">
                  <span class="fw-bold">Name:</span> <%= item.Name %>
                </div>
                <div class="col-md-3">
                  <span class="fw-bold">Quantity Owned:</span> <%= item.owned %>
                </div>
                <div class="col-md-3">
                  <span class="fw-bold">Current Price:</span> <%= item.Price %>
                </div>
              </div>
              <div class="row mt-3">
                <div class="col-md-6">
                  <form
                    action="/client/fp/item/<%= item.FundNo %>/<%= id %>/sell"
                    method="post"
                  >
                    <div class="input-group">
                      <input
                        type="number"
                        class="form-control"
                        name="quantity"
                        placeholder="Enter quantity to sell"
                        min="1"
                        max="<%= item.owned %>"
                      />
                      <button type="submit" class="btn btn-success">
                        Sell
                      </button>
                    </div>
                  </form>
                </div>
                <div class="col-md-6">
                  <form
                    action="/client/fp/item/<%= item.FundNo %>"
                    method="get"
                  >
                    <button type="submit" class="btn btn-info w-100">
                      View
                    </button>
                  </form>
                </div>
              </div>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
