<%- layout('Layout/boilerplate.ejs') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-primary">
        <div
          class="card-header"
          style="background-color: #6c757d; color: white"
        >
          <h2 class="fw-bold text-center">Stocks Available For Monitoring-</h2>
        </div>
        <div class="card-body">
          <ul class="list-group">
            <% for(item of fp){ %>
            <li
              class="list-group-item mb-4 border border-primary"
              style="background-color: #f5f5f5"
            >
              <div class="d-flex flex-column">
                <div
                  class="d-flex flex-row justify-content-around align-items-center"
                >
                  <span class="fw-bold">Stock <%= item.FundNo %></span>
                  <span><%= item.Name %></span>
                  <span class="fw-bold">Current Price: <%= item.Price %></span>
                </div>
                <div class="d-flex flex-row justify-content-around mt-2">
                  <form action="/client/fp/item/<%=item.FundNo%>" method="get">
                    <button type="submit" class="btn btn-info mb-2">
                      View
                    </button>
                  </form>
                </div>
              </div>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
