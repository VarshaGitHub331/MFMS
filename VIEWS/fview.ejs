<%-layout('Layout/boilerplate.ejs')%> <%- layout('Layout/boilerplate.ejs') %>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
/>
<style>
  body {
    background-color: #28a745;
  }
  .sidebar {
    position: sticky;
    top: 0;
    left: 0;
    margin-top: 3.5rem;
    position: fixed;
    width: 200px;
    height: 100%;
    background-color: #343a40; /* Dark gray background */
    color: #fff; /* White text */
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }

  .sidebar h4 {
    margin-top: 0;
    margin-bottom: 20px;
    font-size: 1.2rem;
  }

  .sidebar p {
    margin: 0;
    font-size: 1rem;
  }
</style>
<div class="sidebar">
  <ul class="list-group client-info-container" style="width: 100%">
    <li class="list-group-item">
      <p><i class="fas fa-user"></i>Username: <%=Name%></p>
    </li>
    <li class="list-group-item">
      <p><i class="fas fa-id-card"></i>Id: <%=CustomerNo%></p>
    </li>
    <li class="list-group-item">
      <p><i class="fas fa-coins"></i> Balance: <%=Balance%></p>
    </li>

    <ul class="navbar-nav flex-column" style="padding-top: 20px; height: 50%">
      <li
        class="nav-item"
        style="width: 200px; border: 1px solid white; height: 20vh"
      >
        <a
          class="nav-link active text-center"
          aria-current="page"
          href="/client/<%=id%>/buy"
          style="font-size: 20px; color: white"
          >Buy</a
        >
      </li>
      <li
        class="nav-item"
        style="width: 200px; border: 1px solid white; height: 20vh"
      >
        <a
          class="nav-link text-center"
          href="/client/<%=id%>/sell"
          style="font-size: 20px; color: white"
          >Sell</a
        >
      </li>
      <li
        class="nav-item"
        style="
          width: 200px;
          border: 1px solid white;
          margin-left: 0;
          height: 20vh;
        "
      >
        <a
          class="nav-link text-center"
          href="/client/<%=id%>/portfolio"
          style="font-size: 20px; color: white"
          >Portfolio</a
        >
      </li>
    </ul>
  </ul>
</div>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-primary">
        <div
          class="card-header"
          style="background-color: #6c757d; color: white"
        >
          <h2 class="fw-bold text-center">Fund Details</h2>
        </div>
        <div class="card-body">
          <div class="mb-4">
            <h4 class="fw-bold">Fund Description</h4>
            <p><%= description.Fund_Description %></p>
          </div>
          <div class="mb-4">
            <h4 class="fw-bold">Companies and Quantity</h4>
            <% rows.forEach(row => { %>
            <div class="mb-2">
              <p class="fw-bold">Company Name: <%= row.Name %></p>
              <p>Quantity: <%= row.Quantity %></p>
            </div>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
